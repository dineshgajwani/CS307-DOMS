<!doctype html>
<html>
<head>
    <title>DOMS</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Manage Drivers</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Your Info</h3>

                    <p>
                        <strong>id</strong>: <%= user.id %><br>
                        <strong>email</strong>: <%= user.username %><br>
                        <strong>password</strong>: <%= user.password %><br>
                        <strong>store name</strong>: <%= user.storename %><br>
                        <strong>store email</strong>: <%= user.storeemail %><br>
                        <strong>store phone</strong>: <%= user.storephone %><br>
                        <strong>store address</strong>: <%= user.storeaddress %><br>

                    </p>

            </div>
            <div class="well">
                <h3><span class="fa fa-user"></span> Your Drivers</h3>

                    <p>
                        <strong>id</strong>: <%= user.id %><br>
                        <strong>email</strong>: <%= user.username %><br>
                        <strong>password</strong>: <%= user.password %><br>
                        <strong>store name</strong>: <%= user.storename %><br>
                        <strong>store email</strong>: <%= user.storeemail %><br>
                        <strong>store phone</strong>: <%= user.storephone %><br>
                        <strong>store address</strong>: <%= user.storeaddress %><br>

                    </p>
                    <p>Manage Drivers? <a href="/adminManageDrivers">Manage Drivers</a></p>

            </div>
        </div>

    </div>

</div>
</body>
</html>
