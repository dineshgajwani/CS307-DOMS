<!doctype html>
<html>
<head>
    <title>DOMS</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Manage Drivers</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Your Info</h3>
                    <p>
                        <strong>Store ID</strong>: <%= user.id %><br>
                        <strong>Username</strong>: <%= user.username %><br>
                        <strong>Store Name</strong>: <%= user.storename %><br>
                        <strong>Store Email</strong>: <%= user.storeemail %><br>
                        <strong>Store Phone</strong>: <%= user.storephone %><br>
                        <strong>Store Address</strong>: <%= user.storeaddress %><br>

                    </p>
            </div>
            <div class="well">
                <h3><span class="fa fa-driver"></span> Your Drivers</h3>
                <%  for(var i = 0;i < 5;i++) { %>
                    <p>
                        <strong>Driver ID</strong>: <%= driver[i].did %><br>
                        <strong>Username</strong>: <%= driver[i].username %><br>
                        <strong>Password</strong>: <%= driver[i].password %><br>
                        <strong>Name</strong>: <%= driver[i].name %><br>
                        <strong>Address</strong>: <%= driver[i].address %><br>
                        <strong>Email</strong>: <%= driver[i].email %><br>
                        <strong>Phone</strong>: <%= driver[i].phone %><br>
                    </p>
                    <p>Edit <a href="/editDriver">Edit Driver</a></p>
                    <p>Delete <a href="/adminManageDrivers">Delete Driver</a></p>
                    <button type="submit" class="btn btn-warning btn-lg">Signup</button>
                    <button type="submit" class="btn btn-warning btn-lg">Edit</button>
                    <button type="submit" class="btn btn-warning btn-lg">Delete</button>
                    <% } %>
            </div>
        </div>

    </div>

</div>
</body>
</html>
