<!doctype html>
<html>
<head>
    <title>DOMS</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">


    <h2><span class="fa fa-sign-in"></span> Create New Order</h2>

    <!-- show any messages that come back with authentication -->

    <!-- LOGIN FORM -->
    <form action="./orders" method="post">
        <div class="form-group">
            <label>Order Description</label>
            <input type="text" class="form-control" name="description">
        </div>
        <div class="form-group">
            <label>Tip</label>
            <input type="text" class="form-control" name="tip">
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control" name="price">
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" name="address">
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Create</button>



    <p>Cancel <a href="./orders">Back to Manage Orders</a></p>
    <p>Or go <a href="/">Home</a>.</p>


</div>

</div>
</body>
</html>
