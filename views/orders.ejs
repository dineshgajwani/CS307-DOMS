<!doctype html>
<html>
<head>
    <title>DOMS</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1></span> Manage Orders</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Your Orders</h3>
                    <% for (var i = 0; i < data.length; i++) { %>
                    <p>
                        <strong>Order ID</strong>: <%= data[i].oid %><br>
                        <strong>Order Description</strong>: <%= data[i].description %><br>
                        <a href="./orders/<%= data[i].oid %>"> View order    </a>      |
                        <a href="./orders/<%= data[i].oid %>/delete"> Delete order   </a>
                    </p>
                    <% } %>

            </div>
            <h3><a href="./newOrder">Create new order</a></h3>
            <p><a href="/profile">Back to Profile</a></p>
            <p>Or go <a href="/">Home</a>.</p>
        </div>

    </div>

</div>
</body>
</html>
