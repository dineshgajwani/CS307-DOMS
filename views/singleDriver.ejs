<!doctype html>
<html>
<% include ./partials/head %>
<body>
<% include ./partials/navbar %>
<div class="container">

    <div class="page-header text-center">

        <h1></span> Driver Information</h1>

        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">

                <h3><span class="fa fa-user"></span> <%= driver.name %></h3>

                    <p>
                        <strong>Driver ID</strong>: <%= driver.did %><br>


                        <strong>Username</strong>: <%= driver.username %><br>
                        <strong>Password</strong>: <%= driver.password %><br>
                        <strong>Name</strong>: <%= driver.name %><br>
                        <strong>Email</strong>: <%= driver.email %><br>
                        <strong>Address</strong>: <%= driver.address %><br>
                        <strong>Phone</strong>: <%= driver.phone %><br>
                        <strong>Restuarant</strong>: <%= driver.id %><br>
                    </p>

            </div>

        </div>

    </div>

</div>
</body>
</html>
